<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="mapper.member">
	<resultMap type="memberVO" id="memResult">
	<result property="num" column="num"/>
	<result property="id" column="id"/>
	<result property="pwd" column="pwd"/>
	<result property="name" column="name"/>
	<result property="address" column="address"/>
	<result property="ph" column="ph"/>
	<result property="email" column="email"/>
	<result property="cnt" column="cnt"/>
	</resultMap>
	
	<select id="selectAllMember" resultMap="memResult">
	<![CDATA[ select * from udong_member order by num desc]]>
	</select>
	
	<insert id="insertMember" parameterType="memberVO">
	<![CDATA[inset into udong_member(num,id,pwd,name,address,ph,email)
	 values(udong_seq.nextval,#{id},#{pwd},#{name},#{address},#{ph},#{email})]]>
	</insert>
	
	<update id="updateMember" parameterType="memberVO">
	<![CDATA[update udong_member set pwd=#{pwd}, email=#{email}, address=#{address}, ph=#{ph} where id=#{id}]]>
	</update>
	
	<delete id="deleteMember" parameterType="String">
	<![CDATA[delete from udong_member where id=#{id}]]>
	</delete>

</mapper>