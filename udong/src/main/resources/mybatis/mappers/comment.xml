<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.comment">
	<resultMap id="comResult" type="commentVO">
		<result property="article_no" column="article_no" />
		<result property="article_title" column="article_title" />
		<result property="article_content" column="article_content" />
		<result property="article_like" column="article_like" />
		<result property="article_hate" column="article_hate" />
	</resultMap> 
	
	<select id="commentList" resultMap="comResult"   >
    <![CDATA[
      SELECT * from udong_groupboard	
    ]]>
  </select>
	
    
  <insert id="addComment"  parameterType="commentVO">
		<![CDATA[
		 insert into udong_groupboard(article_title, article_content)
		 values(#{article_title, jdbcType=VARCHAR}, #{article_content, jdbcType=VARCHAR})
		]]>      
	</insert>
	
  <delete id="deleteComment"  parameterType="int">
	<![CDATA[
	   delete from udong_groupboard
	   where
	   article_no=#{article_no}
	]]>      
  </delete>


</mapper>